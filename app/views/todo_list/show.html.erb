<div class="container">
  <div class="todo-list">
  </div>
</div>

<script type="text/json" id="bootstrapped-todos">
  <%= @todo_items.to_json %>
</script>

<script type="text/javascript">
  $(function () {
    var todosDiv = $("<div>");
    todosDiv.html($("#bootstrapped-todos").text());
    var todosJSON = JSON.parse(todosDiv.text());

    var $rootEl = $(".todo-list")

    Todos.initialize(todosJSON, $rootEl);
  });
</script>